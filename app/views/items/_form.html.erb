<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= form_for [@user, item] do |f| %>

        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: "Add new item" %>
        </div>

        <div class="form-group">
          <%= f.submit "Add", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 

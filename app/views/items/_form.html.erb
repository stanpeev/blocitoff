<div class="container">
  <div class="row">
    <div id="item-form">
      <div class="col-md-4">
        <%= form_for [@user, item] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: "Add new item" %>
          </div>
      </div>
      <div class="col-md-1" id="submit-button">
          <div class="form-group">
            <%= f.submit "Add", class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 
